<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/add_task_button"
        android:layout_width="316dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:text="Add A New Task/Assignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_item"
        android:layout_width="364dp"
        android:layout_height="447dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_tasks" />

    <TextView
        android:id="@+id/todays_date"
        android:layout_width="362dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text=""
        android:textSize="21sp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="66dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_task_button" />

    <TextView
        android:id="@+id/your_tasks"
        android:layout_width="362dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="Your Tasks:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todays_date"/>
</androidx.constraintlayout.widget.ConstraintLayout>
